{
    "manifest_version": 3,
    "name": "Product Availability Checker",
    "version": "1.0",
    "description": "Check product availability at Croma stores.",
    "permissions": [
      "activeTab",
      "storage",
      "tabs"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["*://www.croma.com/*"],
        "js": ["content.js"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["Croma Store List.csv"],
        "matches": ["<all_urls>"]
      }
    ]
  }

  
